{
    "parser": "@typescript-eslint/parser",
    "extends": ["plugin:@typescript-eslint/recommended"],
    "plugins": ["prettier"],
    "parserOptions": { "ecmaVersion": 2018, "sourceType": "module" },
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "trailingComma": "es5",
                "singleQuote": true,
                "tabWidth": 4,
                "bracketSpacing": true,
                "printWidth": 100,
                "semi": true,
                "useTabs": false,
                "endOfLine": "auto"
            }
        ]
    }
}
